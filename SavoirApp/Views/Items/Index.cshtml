@model IEnumerable<SavoirApp.Models.Item>



@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
              @if (User.IsInRole("Admin"))
                {
                    <th>
                    @Html.DisplayNameFor(model => model.ImageURL)
                    </th> 
                    <th>
                    @Html.DisplayNameFor(model => model.InStock)
                    </th>

                }
            
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
             @if (User.IsInRole("Admin"))
                {
                     <td>
                    @Html.DisplayFor(modelItem => item.ImageURL)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.InStock)
                    </td>
                }
               
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            
            <td>  
                
                @if (User.Identity.IsAuthenticated)
                    @using (Html.BeginForm("Index", "Items", FormMethod.Post))
                    {
                        <button asp-action="AddToCart" asp-controller="Items" name="id">Add to cart</button> <nobr> | </nobr>
                        }

                 @if (User.IsInRole("Admin"))
                        {
                             <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> <nobr> | </nobr>
                             <a asp-action="Delete" asp-route-id="@item.ID">Delete</a> <nobr> | </nobr>
                        }
                   <a asp-action="Details" asp-route-id="@item.ID">Details</a> 
                
            </td>
        </tr>
}
    </tbody>
</table>
